@model TAMS.Entity.Question
@{
    ViewBag.Title = "ManageQuestion";
}

<script type="text/javascript" src="~/Scripts/jquery-3.4.1.min.js"></script>

<div class="container-fluid">
    <h2>Users Record</h2>
    <a href='@Url.Action("Question","Admin")'><button type="button" class="btn btn-primary">Add New Question</button><br /><br /></a>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Text
                </th>

                <th>
                    TextAnswer
                </th>
                <th>
                    Category Name
                </th>
                <th>
                    Mark
                </th>
                <th>
                    CreateDate
                </th>
                <th>
                    ModifyDate
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody class="tbody"></tbody>
    </table>
    <div class="next">

    </div>
    <div class="modal fade bd-example-modal-lg" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">×</button>
                    <h4 class="modal-title" id="myModalLabel">Add Category</h4>
                </div>
                <div class="modal-body">
                    <form>
                        @Html.TextBoxFor(model => model.Id, new { @class = "form-control", @placeholder = "Id" })
                        <div class="form-group">
                            <label for="formGroupExampleInput">Tên câu hỏi:</label>
                            <input type="text" class="form-control" id="Text" name="Text" placeholder="Nhập câu hỏi">
                        </div>
                        <div class="form-group">
                            <label for="formGroupExampleInput">Loại câu hỏi:</label>
                            <select class="form-control" id="CategoryId" name="CategoryId">
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="formGroupExampleInput">Điểm:</label>
                            <input type="text" class="form-control" id="Mark" name="Mark" placeholder="Nhập điểm">
                        </div>

                        <div class="form-group">
                            <label for="formGroupExampleInput2">Câu trả lời:</label>

                        </div>
                        <div id="answer">

                        </div>

                    </form>

                </div>
                <div class="modal-footer">

                    <button type="button" class="btn btn-primary" id="btnUpdate" onclick="UpdateQuestion();">Update</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/Question.js"></script>

