
@{
    ViewBag.Title = "AddQuestion";
  
}
<script src="~/Scripts/jquery-3.4.1.js"></script>
<div class="container">
    <div class="row">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="clearTextBox();">Thêm loại câu hỏi</button>
        <a href="@Url.Action("ManageQuestion","admin")"><button type="button" class="btn btn-primary">Quản lý câu hỏi</button></a>
      
    </div>
    <form>
        <div class="form-group">
            <label for="formGroupExampleInput">Tên câu hỏi:</label>
            <input type="text" class="form-control" id="Text" name="Text" placeholder="Nhập câu hỏi">
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput">Loại câu hỏi:</label>
            <select class="form-control" id="CategoryId" name="CategoryId">
            </select>
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput">Điểm:</label>
            <input type="text" class="form-control" id="Mark" name="Mark" placeholder="Nhập điểm">
        </div>

        <div class="form-group">
            <label for="formGroupExampleInput2">Câu trả lời:</label>

        </div>
        <div id="answer">

        </div>
        <button class="btn btn-primary" onclick=" return AddQuestion(); ">Submit</button>
    </form>

    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog ">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">×</button>
                    <h4 class="modal-title" id="myModalLabel">Add Category</h4>
                </div>
                <div class="modal-body">
                    <form>
                        <p>Tạo loại câu hỏi</p>

                        <label for="Name">Name</label>


                        <input type="text" class="form-control" id="Name" placeholder="Loại câu hỏi">
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="btnAdd" onclick="return Add();">Add</button>

                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/Question.js"></script>